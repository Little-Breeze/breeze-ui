.breeze-slides
  width: 100%
  max-width: 375px
  height: 200px
  overflow: hidden
  position: relative
  
  .slide-content
    
    .scroll-box
      position: relative
      top: 0
      margin: 0
      padding: 0
      overflow: hidden
      // transition: left 300ms ease-in;
      .pannel-content
        float: left
        position: relative
        overflow: hidden
      
        img
          width: 100%
          height: 100%



  .nav-content
    position: absolute
    bottom: 10px
    text-align: center
    .nav-item
      display: inline-block
      width: 10px
      height: 10px
      border-radius: 100%
      overflow: hidden
      background: #fff
      margin-left: 10px
      &:first-child
        margin-left: 0
      &.selected
        background: #ff6c03
        
