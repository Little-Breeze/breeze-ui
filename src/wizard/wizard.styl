
.steps-indicator {
  position: relative;
  margin: 0;
  margin-top: 46px;
  padding: 0;
  height: 30px;
  list-style: none;
}
.steps-indicator:before {
  top: -18px;
  background-color: #d7dadb;
  content: '';
  position: absolute;
  height: 2px;
}
.steps-indicator.steps-2:before {
  left: 25%;
  right: 25%;
}
.steps-indicator.steps-3:before {
  left: 16.666666666667%;
  right: 16.666666666667%;
}
.steps-indicator.steps-4:before {
  left: 12.5%;
  right: 12.5%;
}
.steps-indicator.steps-5:before {
  left: 10%;
  right: 10%;
}
.steps-indicator.steps-6:before {
  left: 8.3333333333333%;
  right: 8.3333333333333%;
}
.steps-indicator.steps-7:before {
  left: 7.1428571428571%;
  right: 7.1428571428571%;
}
.steps-indicator.steps-8:before {
  left: 6.25%;
  right: 6.25%;
}
.steps-indicator.steps-9:before {
  left: 5.5555555555556%;
  right: 5.5555555555556%;
}
.steps-indicator.steps-10:before {
  left: 5%;
  right: 5%;
}
.steps-indicator * {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}
.steps-indicator li {
  position: relative;
  float: left;
  margin: 0;
  padding: 0;
  padding-top: 10px;
  text-align: center;
  line-height: 1;
}
.steps-indicator li a {
  color: #4a4a4a;
  text-decoration: none;
  text-transform: uppercase;
  transition: 0.25s;
  cursor: pointer;
}
.steps-indicator li a > .step-num {
  position: absolute;
  top: -24px;
  left: 48%;
  font-size: 18px;
  color: white;
}
.steps-indicator li a:before {
  position: absolute;
  top: -30px;
  left: 45.7%;
  width: 30px;
  height: 30px;
  border-radius: 50%;
  background-color: #d7dadb;
  content: '';
  transition: 0.25s;
}
.steps-indicator li a:hover {
  color: #005641;
}
.steps-indicator.steps-2 li {
  width: 50%;
}
.steps-indicator.steps-3 li {
  width: 33.333333333333%;
}
.steps-indicator.steps-4 li {
  width: 25%;
}
.steps-indicator.steps-5 li {
  width: 20%;
}
.steps-indicator.steps-6 li {
  width: 16.666666666667%;
}
.steps-indicator.steps-7 li {
  width: 14.285714285714%;
}
.steps-indicator.steps-8 li {
  width: 12.5%;
}
.steps-indicator.steps-9 li {
  width: 11.111111111111%;
}
.steps-indicator.steps-10 li {
  width: 10%;
}
.steps-indicator.steps-11 li {
  width: 9.0909090909091%;
}
.steps-indicator li.default {
  pointer-events: none;
}
.steps-indicator li.default a:hover {
  color: #ff6c03;
}
.steps-indicator li.current,
.steps-indicator li.editing {
  pointer-events: none;
}
.steps-indicator li.current a:before {
  background-color: #ff6c03;
}
.steps-indicator li.done a:before {
  background-color: #d7dadb;
}
.steps-indicator li.editing a:before {
  background-color: #ff6c03;
}
