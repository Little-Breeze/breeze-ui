.breeze-avatar
  display: inline-block
  width: 45px
  height: 45px
  background: #ccc
  text-align: center
  line-height: 45px
  color: #fff
  font-size: 20px
  border-radius: 100%
  overflow: hidden
  
  &.breeze-avatar-square
    border-radius: 0
  
  &.breeze-avatar-large
    width: 60px
    height: 60px
    line-height: 60px
    font-size: 24px
    
  &.breeze-avatar-small
    width: 35px
    height: 35px
    line-height: 35px
    font-size: 18px
    
  img
    width: 100%
    height: 100%